@model ultimoprogetto.Models.ordini

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4 class="fw-bold"> ORDINI</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group d-flex align-items-center">
            @Html.LabelFor(model => model.indirizzo, htmlAttributes: new { @class = "me-2" })
            @Html.EditorFor(model => model.indirizzo, new { htmlAttributes = new { @class = "" } })
            @Html.ValidationMessageFor(model => model.indirizzo, "", new { @class = "text-danger" })
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
}