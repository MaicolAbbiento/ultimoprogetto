﻿@using ultimoprogetto.Models
@model List<pizeeoridnate>
@if (Model.Count == 0)
{
    <p>non hai effettuato nessun ordine </p>
    @Html.ActionLink("torna al menu", "menu");
}
else
{
    foreach (pizeeoridnate p in Model)
    {

        <div class="d-flex">
            <p>n.@p.quantita @p.pizza.nome</p>
            <p class="ms-2">@p.pizza.costo.ToString("C2") </p>
        </div>

    }

    <p>@ViewBag.costotot</p>
    <p>per la preparazione ci voranno @ViewBag.tempostimato min</p>
    <a class="btn btn-success" href="@Url.Action("concludiordine1", "MenuOrdinazioni", new{ parameter = $"{Model[0].idordine}"})"> fai il pagamento </a>
}