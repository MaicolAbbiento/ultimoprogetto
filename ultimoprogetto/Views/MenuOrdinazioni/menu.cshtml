﻿@using ultimoprogetto.Models
@model List<pizza>
@{
    ViewBag.Title = "menu";
}
@{
    Html.RenderAction("indirizzo");
}

@foreach (pizza p in Model)
{
    <div class="mt-4 d-flex align-items-center">
        <img class="img-pizza" src="~/Content/FileUpload/@p.img" />
        <div >
            <div class="d-flex ms-2">
                <p class="fw-bold mb-0"> @p.nome</p>
                <p class="mb-0"> @p.costo.ToString("C2")</p>
            </div>
            <p class="ms-2"> @p.ingredienti</p>
        </div>


        @if (User.IsInRole("Admin"))
        {

            <a class="btn btn-danger" href="@Url.Action("eliminadaldatabase", "AgiungieModificaPizza", new{ parameter = $"{p.idpizza}"})"> elimina </a>
        }

        <div class="ms-2" id="@p.idpizza"></div>
    </div> 
    
}

@section scripts{

    <script src="~/Scripts/JavaScript.js"></script>
}