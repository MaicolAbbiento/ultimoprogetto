﻿@using ultimoprogetto.Models
@model List<pizza>
@{
    ViewBag.Title = "menu";
}
@if (!User.IsInRole("Admin"))
{
    {
        Html.RenderAction("indirizzo");
    }
}
@foreach (pizza p in Model)
{
    <div class="mt-4 d-flex align-items-center">
        <img class="img-pizza" src="~/Content/FileUpload/@p.img" />
        <div>
            <div class="d-flex ms-2">
                <p class="fw-bold mb-0"> @p.nome</p>
                <p class="mb-0 ms-1"> @p.costo.ToString("C2")</p>
            </div>
            <p class="ms-2"> @p.ingredienti</p>
        </div>

        @if (User.IsInRole("Admin"))
        {
            <a class="btn btn-danger mx-2" href="@Url.Action("eliminapizzadaldatabase", "AgiungieModificaPizza", new { parameter = $"{p.idpizza}" })"> elimina </a>
            <a class="btn btn-warning" href="../AgiungieModificaPizza/modificapizza/@p.idpizza"> modifica </a>
        }
        else
        {
            <div class="ms-2 mt-2" id="@p.idpizza"></div>
        }
    </div>

}
@if (!User.IsInRole("Admin"))
{

    <a> @Html.ActionLink("concludiordine", "concludiordine", "MenuOrdinazioni", new { @class = "btn btn-success" })</a>

}

@section scripts{

    <script src="~/Scripts/JavaScript.js"></script>
}